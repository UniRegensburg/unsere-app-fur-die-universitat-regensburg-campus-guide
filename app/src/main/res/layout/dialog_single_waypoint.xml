<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_layout_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_marginHorizontal="40dp"
    android:background="@color/colorContentBackground"
    android:elevation="5dp"
    android:paddingHorizontal="12dp"
    android:paddingVertical="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/tv_back_btn"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="fitXY"
            android:src="@drawable/ic_cross"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/highlightColor" />

        <TextView
            android:id="@+id/tv_waypoint_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_waypoint_title"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_back_btn" />

        <include layout="@layout/cardview_single_waypoint_descr"
            android:layout_width="match_parent"
            android:id="@+id/card_description_view"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_waypoint_title" />

        <include layout="@layout/cardview_single_waypoint_image"
            android:layout_width="match_parent"
            android:id="@+id/card_image_view"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_description_view" />


        <include layout="@layout/cardview_single_waypoint_video"
            android:layout_width="match_parent"
            android:id="@+id/card_video_view"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_image_view" />


        <TextView
            android:id="@+id/tv_audio_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/waypoint_audio_title"
            android:textColor="@color/textColorGrey"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_video_view" />

        <View
            android:id="@+id/vertical_audio_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="1dp"
            android:background="@color/themeColor"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_audio_title" />

        <com.keenfin.audioview.AudioView
            android:id="@+id/iv_audio_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vertical_audio_view"
            app:minified="true"
            app:primaryColor="@color/highlightColor"
            app:selectControls="false"
            app:showTitle="false" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>