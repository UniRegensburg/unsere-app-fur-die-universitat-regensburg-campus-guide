<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/discoverFragment">

    <fragment
        android:id="@+id/discoverFragment"
        android:name="de.ur.explure.views.DiscoverFragment"
        android:label="DiscoverPage"
        tools:layout="@layout/fragment_discover">
        <action
            android:id="@+id/action_discoverFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_discoverFragment_to_mapFragment"
            app:destination="@id/mapFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="de.ur.explure.views.SearchFragment"
        android:label="SearchPage"
        tools:layout="@layout/fragment_search">
        <action
            android:id="@+id/action_searchFragment_to_testFragment"
            app:destination="@id/testFragment" />
        <action
            android:id="@+id/action_searchFragment_to_testFragment2"
            app:destination="@id/testFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="de.ur.explure.views.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/mapFragment"
        android:name="de.ur.explure.views.MapFragment"
        android:label="Map"
        tools:layout="@layout/fragment_map" />
    <fragment
        android:id="@+id/testFragment"
        android:name="de.ur.explure.views.TestFragment"
        android:label="TestFragment" />

</navigation>